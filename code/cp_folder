# /root/capsule/scratch/DLC_dataset_for_LP/Marton_behavior_data_modified
data_dir="/root/capsule/scratch/LP_outputs/Marton_behavior_data_modified/"
data_dir="/root/capsule/scratch/DLC_dataset_for_LP/Marton_behavior_data_modified/"

for project in "BCI_side&bottom_bottom_only_2023_Sept" "BCI_side&bottom_side_only_2023_Sept" "BCI_side&bottom_2023_Sept";do
    proj_dir=${data_dir}/${project}
    echo $proj_dir
    ls $proj_dir

    video_dir=${proj_dir}/videos
    echo $video_dir

    for mouseID in "BCI26" "BCI29";do
        tgt_dir=${video_dir}/${mouseID}
        if [ ! -d ${tgt_dir} ]; then
            echo ${tgt_dir}
            mkdir ${tgt_dir}
            cp ${video_dir}/${mouseID}*.mp4 ${tgt_dir}
        fi
        # cp -r ${proj_dir}/CollectedData_all_pca_singleview.config.yaml ${proj_dir}/${mouseID}_excluded_pca_singleview.config.yaml
        # cp -r ${proj_dir}/CollectedData_all_supervised.config.yaml ${proj_dir}/${mouseID}_excluded_supervised.config.yaml

        cp -r ${proj_dir}/${mouseID}_excluded_pca_singleview.config.yaml ${proj_dir}/${mouseID}_excluded_pca_single_multiview.config.yaml
        cp -r ${proj_dir}/${mouseID}_excluded_pca_singleview.config.yaml ${proj_dir}/${mouseID}_excluded_supervised.config.yaml

    done
done

